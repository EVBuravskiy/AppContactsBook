<Window x:Class="AppContactBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppContactBook"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <!--Tool bar-->
        <Grid DockPanel.Dock="Top" Height="40" Background="{StaticResource BlueGreyGradient}">
            <!-- 8 Columns -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Button Content="Favorite"
                        Style="{StaticResource MenuTabButton}"/>
            </Grid>
            <Grid Grid.Column="1">
                <Button Content="Contacts"
                        Style="{StaticResource MenuTabButton}"/>
            </Grid>
            <!-- Tool Buttons -->
            <StackPanel Grid.Column="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <!-- Add button -->
                <Button Style="{StaticResource MenuIconButton}">
                    <Button.Content>
                        <Image Height="25" Width="25" Source="/Resources/Images/addIcon.png" Stretch="Fill" />
                    </Button.Content>
                </Button>
                <!-- Edit button -->
                <Button Style="{StaticResource MenuIconButton}">
                    <Button.Content>
                        <Image Height="25" Width="25" Source="/Resources/Images/createIcon.png" Stretch="Fill"/>
                    </Button.Content>
                </Button>
                <!-- Delete button -->
                <Button Style="{StaticResource MenuIconButton}">
                    <Button.Content>
                        <Image Height="25" Width="25" Source="/Resources/Images/deleteIcon.png" Stretch="Fill"/>
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>
        <!-- Content -->
        <Grid DockPanel.Dock="Bottom">
            <ContentControl Content=""/>
        </Grid>
    </DockPanel>
</Window>
